generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Post {
  id           String     @id @default(uuid())
  title        String
  agree        String[]
  disagree     String[]
  votes        Int
  interactions Int
  reports      String[]
  date         DateTime   @default(now())
  comments     Comment[]
}

model Comment {
  id       String   @id @default(uuid())
  content  String
  date     DateTime @default(now())
  post     Post     @relation(fields: [postId], references: [id])
  postId   String
  replies  Reply[]
}

